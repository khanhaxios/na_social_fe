<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Phần hiển thị Comment chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Avatar người dùng -->
        <ImageView
            android:id="@+id/imv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avt"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop">

        </ImageView>


        <!-- Nội dung comment -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên người dùng và nội dung comment -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hong Anh"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung comment "
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- Thông tin thời gian, thích, trả lời -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days"
                    android:textSize="12sp"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Phần hiển thị danh sách reply dạng cây -->
    <LinearLayout
        android:id="@+id/reply_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:visibility="visible">

        <!-- Ví dụ reply đầu tiên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imv_reply_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/avt"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                 />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reply_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dkhanh"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_reply_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nội dung reply"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <!-- Thời gian, Thích và Trả lời cho reply -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_reply_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 hours"
                        android:textSize="12sp"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/tv_reply_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_reply_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reply"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Nút hiển thị thêm reply nếu có -->
        <TextView
            android:id="@+id/tv_show_more_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View more 20 answers..."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingVertical="4dp" />
    </LinearLayout>
</LinearLayout>
